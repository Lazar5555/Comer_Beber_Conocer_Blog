<div class="absolute background-main-fondo" style="background-size:cover; width:100%; height:605px;">
    <%= render "partials/messages" %>
    <div class="center-xs top-space">
        <img id="image"src="/images/cbyc.png"/>
    </div>

    <div class="row center-xs text-center font-Antic be-medium" style="color: #FFFFFF;">
        <div class="col-xs-4 backG-home">
            <div class="box">
                    <p style="margin-top: 0px;">
                        ¿Quiéres saber alguna opinión antes de salir a comer en GDL?
                    </p>
                    <p style="margin-bottom: 3px;">
                        <strong>¡Aquí te la damos!</strong>
                    </p>
            </div>
        </div>
    </div>

    <% if(user_signed_in?) %>
        <div class="row center-xs font-Antic white-letters" style="font-size:30px; margin-top:1em;">
            <div class="col-xs-4">
                <p>Bienvenido <%= current_user.email %></p>
            </div>
        </div>
    <%else%>
        <div class="font-Antic" style="font-size:1.5em; color:white; margin-top: 2em;">
            <div class="row center-xs">
                <div class="col-xs-2 Aligner">
                    <i class="material-icons">person</i>
                    <%= link_to "Iniciar sesión", new_user_session_path %>
                </div>
            </div>

            <div class="row center-xs">
                <div class="col-xs-2 Aligner">
                    <i class="material-icons" style="margin-right:4px;">person_add</i>
                    <%= link_to "Crear cuenta", new_user_registration_path, style:"margin-right:6px;" %>
                </div>
            </div>
        </div>
    <%end%>
</div>
